<div class="container">
 <div class="col-lg-6 col-lg-offset-3 col-sm-10 col-sm-offset-1">

  <h1>ブログ一覧</h1>
   <%= link_to "ブログを作成", new_blog_path, class: 'btn btn-default' %>
  <% @blogs.each do |blog| %>
  <div class="row">
    <h4><strong>タイトル:<%= blog.title %></strong></h4>
    <p>本文:<%= blog.content %></p>
    <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
    <%= link_to " 削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, class: 'btn btn-default btn-sm btn btn-danger',class: 'btn btn-default btn-sm btn btn-danger' %>
  </div>
  <% end %>
  
  <div id="blog-page-top-btn" class="blog-page-top-btn">
    <p><a class="move-blog-page-top" id="move-blog-page-top">▲</a></p>
</div>
 
  </div>
</div>

