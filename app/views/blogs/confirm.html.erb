<div class="container">
  <div class="col-lg-6 col-lg-offset-3 col-sm-10 col-sm-offset-1">
<h3>以下の内容で送信</h3>

<%= form_for(@blog) do |f| %>
<%= f.hidden_field :title %>
<%= f.hidden_field :content %>

<p>タイトル:<%= @blog.title %></p>
<p>本文:<%= @blog.content %></p>
<%= f.submit "登録" ,class: 'btn btn-primary btn-block'%>
<% end %>

<%= form_for(@blog, url: new_blog_path, method: 'get') do |f| %>
<%= f.hidden_field :title %>
<%= f.hidden_field :content %>
<!-- 一度パラメーターを元にインスタンスを作成 -->
<%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
<% end %>
  </div>
</div>